import math

def coinciding_time(current_time):
  
   
    hour, minute = map(int, current_time.split(":"))

    minute_speed = 12 * 360 / 60
    hour_speed = 360 / 12

  
    time_to_coincide = math.gcd(60, 12) * (360 - (minute * 6 + (hour % 12) * 30)) / (minute_speed - hour_speed)

    
    coinciding_minute = (minute + time_to_coincide) % 60

   
    if coinciding_minute < 10:
        coinciding_minute = f"0{coinciding_minute}"

    return f"{hour}:{coinciding_minute}"

def main():
    
    current_time = input("Enter the current time (HH:MM): ")
    coinciding_time_str = coinciding_time(current_time)

    print(f"The hands will coincide at {coinciding_time_str}.")

if __name__ == "__main__":
    main()
